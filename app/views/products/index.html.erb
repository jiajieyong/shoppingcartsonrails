<h1>Product List</h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Description</th>
			<th>Link</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |t| %>
			<tr>
				<td><%= t.name %></td>
				<td><%= t.price %></td>
				<td><%= t.description %></td>	
        		<td><%= link_to Category.find(t.id).name%></td>
			</tr>
		<% end %> 
	</tbody>
</table>